// Place your key bindings in this file to overwrite the defaults
[
    { "key": "shift+ctrl+r",           "command": "workbench.action.tasks.runTask" },
    { "key": "ctrl+u ctrl+n",                "command": "workbench.action.files.newUntitledFile" },
    { "key": "alt+right", "command": "workbench.action.terminal.focusNext", "when": "terminalFocus" },
    { "key": "alt+left", "command": "workbench.action.terminal.focusPrevious", "when": "terminalFocus" },
    { "key": "ctrl+w", "command": "workbench.action.terminal.kill", "when": "terminalFocus" },
    { "key": "ctrl+shift+/", "command": "workbench.files.action.showActiveFileInExplorer"},
    { "key": "shift+alt+l", "command": "editor.action.transformToLowercase"},
    { "key": "shift+alt+u", "command": "editor.action.transformToUppercase"},
    { "key": "ctrl+,", "command": "workbench.action.openGlobalSettings" },
    { "key": "ctrl+j", "command": "editor.action.joinLines" },
    { "key": "alt+k", "command": "deleteAllRight" },
    { "key": "alt+backspace", "command": "deleteAllLeft" }
]
